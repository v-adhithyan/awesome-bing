#!/usr/bin/env python

import awesome_bing
from awesome_bing import osutil
import sys

arguements_length = len(sys.argv)

if arguements_length == 1:
	print awesome_bing.help()
elif arguements_length == 2:
	option = sys.argv[1]

	if option == "help":
		print awesome_bing.help()
	elif option == "info":
		print awesome_bing.info()
	elif option =="getset":
		print awesome_bing.getset()
	else:
		print awesome_bing.pic_dir()
else:
	print "Oops! Cannot recognize the given option. \nTIP: Type awesome_bing help to know the usage."